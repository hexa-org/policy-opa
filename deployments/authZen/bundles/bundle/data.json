{
  "policies": [
    {
      "meta": {
        "policyId": "GetUsers",
        "version": "0.7",
        "description": "Get information (e.g. email, picture) associated with a user"
      },
      "subjects": [
        "anyAuthenticated"
      ],
      "actions": [
        "can_read_user"
      ],
      "object": "todo"
    },
    {
      "meta": {
        "policyId": "GetUsersGateway",
        "version": "0.7",
        "description": "Get users via gateway"
      },
      "subjects": [
        "anyAuthenticated"
      ],
      "actions": [
        "http:GET:/users/*"
      ],
      "object": "todo"
    },
    {
      "meta": {
        "policyId": "GetTodos",
        "version": "0.7",
        "description": "Get the list of todos. Always returns true for every user??"
      },
      "subjects": [
        "anyAuthenticated"
      ],
      "actions": [
        "can_read_todos"
      ],
      "object": "todo"
    },
    {
      "meta": {
        "policyId": "GetTodosGateway",
        "version": "0.7",
        "description": "Get the list of todos for Gateway"
      },
      "subjects": [
        "anyAuthenticated"
      ],
      "actions": [
        "http:GET:/todos"
      ],
      "object": "todo"
    },
    {
      "meta": {
        "version": "0.7",
        "description": "Create a new Todo",
        "policyId": "PostTodo"
      },
      "subjects": [
        "role:admin",
        "role:editor"
      ],
      "actions": [
        "can_create_todo"
      ],
      "object": "todo"
    },
    {
      "meta": {
        "version": "0.7",
        "description": "Create a new Todo for Gateway",
        "policyId": "PostTodoGateway"
      },
      "subjects": [
        "role:admin",
        "role:editor"
      ],
      "actions": [
        "http:POST:/todos"
      ],
      "object": "todo"
    },
    {
      "meta": {
        "version": "0.7",
        "description": "Un(complete) a todo.",
        "policyId": "PutTodo"
      },
      "subjects": [
        "anyAuthenticated"
      ],
      "actions": [
        "can_update_todo"
      ],
      "condition": {
        "rule": "subject.roles co \"evil_genius\" or (subject.roles co \"editor\" and resource.properties.ownerID eq subject.claims.email)",
        "action": "allow"
      },
      "object": "todo"
    },
    {
      "meta": {
        "version": "0.7",
        "description": "Un(complete) a todo for Gateway.",
        "policyId": "PutTodoGateway"
      },
      "subjects": [
        "role:evil_genius",
        "role:editor"
      ],
      "actions": [
        "http:PUT:/todos/*"
      ],
      "object": "todo"
    },
    {
      "meta": {
        "version": "0.7",
        "description": "Delete a todo if admin or owner of todo",
        "policyId": "DeleteTodo"
      },
      "subjects": [
        "anyAuthenticated"
      ],
      "actions": [
        "can_delete_todo"
      ],
      "condition": {
        "rule": "subject.roles co \"admin\" or (subject.roles co \"editor\" and resource.properties.ownerID eq subject.claims.email)",
        "action": "allow"
      },
      "object": "todo"
    },
    {
      "meta": {
        "version": "0.7",
        "description": "Delete a todo if admin or owner of todo for Gateway",
        "policyId": "DeleteTodoGateway"
      },
      "subjects": [
        "role:admin",
        "role:editor"
      ],
      "actions": [
        "http:DELETE:/todos/*"
      ],
      "object": "todo"
    }
  ]
}