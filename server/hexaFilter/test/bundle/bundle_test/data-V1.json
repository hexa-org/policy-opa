      "subjects": [
        "net:127.0.0.1/24"
      ],
      "actions": [
        "http:POST:/testpath*",
        "http:!PUT:/testpath*",
        "http:GET:/testpath*"
      ],
      "condition": {
        "rule": "req.method eq GET",
        "action": "allow"
      },
      "object": "CanaryProfileService"
    },
    {
      "meta": {
        "version": "0.7",
